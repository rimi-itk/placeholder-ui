{#- --
title: Table
parameters:
  cols:
    description: The number of columns
    type: number
    default: 3
  rows:
    description: The number of rows
    type: number
    default: 3
examples:
  -
    cols: 2
    rows: 4
  -
    cols: 8
    rows: 7
-- -#}
{% extends 'component.html.twig' %}

{% block style %}
    <style>
        table {
            border-collapse: collapse;
        }
        th, td {
            border: solid 1px #aaa;
            padding: 1em;
        }
    </style>
{% endblock %}

{% block component_wrapper_style %}
padding: 4px;
{% endblock %}

{% block content %}
    {% set cols = max(1, cols|default(3)) %}
    {% set rows = max(1, rows|default(3)) %}

    <table>
        <thead>
        <tr>
            {% for c in range(0, cols - 1) %}
                <th>{{ c }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for r in range(0, rows - 1) %}
            <tr>
                {% for c in range(0, cols - 1) %}
                    <td>{{ r }}, {{ c }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
