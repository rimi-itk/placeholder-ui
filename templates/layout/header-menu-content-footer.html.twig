{% extends 'layout.html.twig' %}

{% block style %}
    <style>
        .layout {
            display: grid;
            grid-template-areas:
                "header header"
                "menu   content"
                "footer footer";
            grid-template-columns: 1fr 3fr;
            gap: .25em;

            > div {
                outline: solid 1px #aaa;
                padding: 1em;
            }

            > div.header {
                grid-area: header;
            }

            > div.menu {
                grid-area: menu;
            }

            > div.content {
                grid-area: content;
            }

            > div.footer {
                grid-area: footer;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="layout">
        <div class="header">{{ 'header'|trans }}</div>
        <div class="menu">{{ 'menu'|trans }}</div>
        <div class="content">{{ 'content'|trans }}</div>
        <div class="footer">{{ 'footer'|trans }}</div>
    </div>
{% endblock %}
